<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MADE" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_800</item>
        <item name="colorPrimaryVariant">@color/black_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/turqoise</item>
        <item name="colorSecondaryVariant">@color/teal</item>
        <item name="colorOnSecondary">@color/black_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MenuTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/effra</item>
        <item name="android:fontFamily">@font/effra</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MenuTextAppearance.Inactive">
        <item name="android:textColor">@color/black_500</item>
    </style>

    <style name="MenuTextAppearance.Active">
        <item name="android:textColor">@color/dark_cyan</item>
    </style>
</resources>